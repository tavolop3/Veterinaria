include mixins/bannerAdmin.pug
doctype html
html
  head
    meta(charset="utf-8")
    title Modificar cruza
    link(rel="stylesheet", href="/style/login.css")
  +bannerAdmin()
  body
    form(action="/usuarios/modificar-raza", method="post")
      ul
        li
          input(type="hidden", name="id", value=servicio._id)
        li
          label(for="raza") Raza:
          select(name="raza", id="raza", required)
            option(value="Chihuahua") Chihuahua
            option(value="Caniche") Caniche
            option(value="Boxer") Boxer
            option(value="Pastor alemán") Pastor alemán
            option(value="Dogo argentino") Dogo argentino
        li
          label(for="sexo") Sexo:
          select(name="sexo", id="sexo", required)
            option(value="macho") Macho
            option(value="hembra") Hembra
        li
          label(for="fechaDeCelo") Fecha de celo:
          input(type="Date", id="fechaDeCelo", name="fechaDeCelo", value=cruza.fecheDeCelo, required)  
        li
          label(for="fechaDeNacimiento") Fecha de nacimiento:
          input(type="Date", id="fechaDeNacimiento", name="fechaDeNacimiento", value=cruza.fecheDeNacimiento, required)  
        li 
          label(for="mail") Mail: 
          input(type="mail", id="mail", name="mail", value=servicio.mail, required)  
        li.button
          button(type="submit") Modificar
    script.
      document.addEventListener('DOMContentLoaded', function() {
        function setMaxDate() {
          var today = new Date();
          var year = today.getFullYear();
          var month = String(today.getMonth() + 1).padStart(2, '0');
          var day = String(today.getDate()).padStart(2, '0');
          var todayDate = `${year}-${month}-${day}`;
          var fechaInput = document.getElementById('fecha');
          fechaInput.setAttribute('max', todayDate);
        }
        setMaxDate();
      });