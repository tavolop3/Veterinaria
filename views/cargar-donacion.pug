include mixins/bannerAdmin.pug
doctype html
html
  head
    meta(charset="UTF-8")
    title Cargar donacion
    link(rel="stylesheet", href="/style/registro.css")
  +bannerAdmin()
  body
    form(action="/admin/cargar-donacion", method="post")
      ul
        li
          label(for="nombre:") *Nombre:
          input(type="text", id="nombre", name="nombre" , required)
        li
        li
          label(for="descripcion") Descripcion:
          input(type="text", id="descripcion", name="descripcion")
        li
          label(for="monto") Monto objetivo:
          input(type="number", id="monto", name="monto", min=0)
        li.button
          button(type="submit") Cargar
          button(onclick="window.history.go(-1)") Cancelar
        p Los datos marcados con * son obligatorios
        if error
          li.error= error  