include mixins/bannerCliente.pug

doctype html
html
  head
    meta(charset="UTF-8")
    title Cargar cruza
    link(rel="stylesheet", href="/style/login.css")
    script.
      function setMinDate() {
        var today = new Date();
        var year = today.getFullYear();
        var month = String(today.getMonth() + 1).padStart(2, '0');
        var day = String(today.getDate()).padStart(2, '0');
        var todayDate = `${year}-${month}-${day}`;
        var fechaInput = document.getElementById('fechaDeCelo');
        fechaInput.setAttribute('min', todayDate);
      }
      window.onload = setMinDate;
+bannerCliente()
body
  form(action="/clientes/cargar-cruza", method="post")
    ul
      li
        label(for="nombreDelPerro") Perro:
        select(name="nombreDelPerro", id="nombreDelPerro", required)
          each perro in perros
            option(value=perro.id)= perro.nombre
          option(value="otro") Otro

      div(id="camposOtro" style="display: none;")
        li
          label(for="sexo") Sexo:
          input(type="text", id="sexo", name="sexo", required)
        li
          label(for="edad") Edad:
          input(type="text", id="edad", name="edad", required)
        li
          label(for="raza") Raza:
          input(type="text", id="raza", name="raza", required)
      // TODO raza desplegable  
      li
        label(for="fechaDeCelo") Fecha de celo: 
        input(type="Date", id="fechaDeCelo", name="fechaDeCelo", required)
      li.button
        button(type="submit") Cargar
  if error
    li.error= error
  script.
    document.getElementById("nombreDelPerro").addEventListener("change", function() {
      var camposOtro = document.getElementById("camposOtro");
      if (this.value === "otro") {
        camposOtro.style.display = "block";
      } else {
        camposOtro.style.display = "none";
      }
    });