doctype html
html
  head
    title Turnos

    style.
      table {
        border-collapse: collapse;
        width: 30%;
      }
      th, td {
        padding: 12px;
        text-align: left;
      }
       /*td.buttons {
        display: flex;
        gap: 10px;
      }*/

  body
    div(ng-unless="turnos.length === 0")
      h1 Lista de turnos
      table
        tr
          th Nombre del perro
          th Rango horario
          th DNI
          th Motivo
          th Estado 
          th Fecha
        each turno in turnos
          tr
            td= turno.nombreDelPerro
            td= turno.rangoHorario
            td= turno.dni
            td= turno.motivo
            td= turno.estado 
            td= turno.fecha
            button(type="button" onclick="window.location.href='/admin/modificar-turno?id=64713320cb306b9ce17965f4'") Modificar turno
            //estos dos botones irian para el cliente que no se si va a ser 2 pugs distintos o 1 pug para los 2
            //if turno.estado = modificado-pendiente && !usuario.isAdmin
            button(type="button" onclick="window.location.href='/clientes/aceptar-modificacion?id=64713320cb306b9ce17965f4'") Aceptar modificación
            button(type="button" onclick="window.location.href='/clientes/rechazar-modificacion?id=64713320cb306b9ce17965f4'") Rechazar modificación