doctype html
html
  head
    title Perro recomendado

    style.
      table {
        border-collapse: collapse;
        width: 30%;
      }
      th, td {
        padding: 2px;
        text-align: left;
      }
      td.buttons {
        display: flex;
        gap: 10px;
      }

//if !perroRecomendado.length !!esto no deberia pasar xq lo controlo en el back
  h1 No tiene perros cargados todav√≠a.
else
  div
    h1 Lista de perros
    table
      tr
        th Raza
        th Sexo
        th Fecha de nacimiento
        th Fecha de celo
        tr
          td= perroRecomendado.raza
          td= perroRecomendado.sexo
          - let fechaNac = `${perroRecomendado.fechaDeNacimiento.getUTCDate()}/${perroRecomendado.fechaDeNacimiento.getUTCMonth()+1}/${perroRecomendado.fechaDeNacimiento.getUTCFullYear()}`
          td= fechaNac
          - let fechaCelo = `${perroRecomendado.fechaDeCelo.getUTCDate()}/${perro.fechaDeCelo.getUTCMonth()+1}/${perro.fechaDeCelo.getUTCFullYear()}`
          td= fechaCelo
          td= perro.color 
          td= perro.observaciones
          if admin
            td.buttons
              form(action="/admin/modificar-perro", method="GET")
                input(type="hidden", name="id", value=perro._id)
                input(type="hidden", name="mailUsuario", value=mailUsuario)
                button(type="submit") Modificar perro
              form(action="/admin/eliminar-perro", method="POST")
                input(type="hidden", name="id", value=perro._id)
                input(type="hidden", name="mail", value=perro.mail)
                button(type="submit") Eliminar perro