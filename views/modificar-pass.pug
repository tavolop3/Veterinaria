doctype html
html
  head
    meta(charset="utf-8")
    title Modificar mis datos
    link(rel="stylesheet", href="/style/login.css")
  body
    form(action="/usuarios/modificar-pass", method="post")
      ul
        li
          label(for="contraseña1") Contraseña nueva:
          input(type="password", id="contraseña1", name="contraseña1", required)
        li
          label(for="contraseña2") Repetir contraseña:
          input(type="password", id="contraseña2", name="contraseña2", required)
        li.button
          button(type="submit") Modificar

    if error
      li.error= error
