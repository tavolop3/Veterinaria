head
    link(rel="stylesheet", href="/style/banner.css")
    
mixin bannerCliente
  body.cuerpoBanner
    header#encabezado
      a#logo(href="/")
        img(src="/logo.png", alt="Logo", style="width: 50px; height: 50px;")
      nav#navBanner
        ul
          li
            select(title="Cuenta", onchange="redirectToPage(this)")
              option(value='placeholder' disabled selected style="display: none;") Mi cuenta
              option(value="/clientes/mis-perros") Mis perros
              option(value='/clientes/modificar-datos') Modificar mis datos 
              option(value="/usuarios/cerrar-sesion") Cerrar sesion
    header#indice
      nav
        ul#lista-funciones
          li
            a(href="/clientes/adopcion") Adoptar
          li
            a(href="/clientes/turnos") Turnos
          li
            a(href="/clientes/anuncio") BÃºsqueda 
          li
            a(href="/clientes/cruza") Cruza   
          li
            a(href="/usuarios/visualizar-tablon-servicios") Servicios         
          li
            a(href="/usuarios/visualizar-tablon-donaciones") Donaciones
          li
            a(href="/urgencias") Urgencias
    script.
      function redirectToPage(selectElement) {
        var selectedValue = selectElement.value;
        if (selectedValue) {
          window.location.href = selectedValue;
        }
      }